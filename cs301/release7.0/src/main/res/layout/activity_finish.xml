    <TextView
        android:id="@+id/winLoseText"
        android:layout_width="339dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/win_message"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/smileyFrown"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/debriefText"
        android:layout_width="335dp"
        android:layout_height="188dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smileyFrown"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/smileyFrown"
        android:layout_width="185dp"
        android:layout_height="219dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/winLoseText"
        app:layout_constraintStart_toStartOf="@+id/winLoseText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:srcCompat="@drawable/smiley" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/confetti"
        android:layout_width="387dp"
        android:layout_height="515dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/confeti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-4dp" />


</android.support.constraint.ConstraintLayout>
